DESCRIPTION="Plugins for Audacious music player"
HOMEPAGE="http://audacious-media-player.org/"
SRC_URI="http://distfiles.atheme.org/${P}.tar.bz2"

PATCH_URI="2.5-buildsys.patch
	   3.0.4-amidi-plug.patch"

NO_AUTOPOINT=1
NO_ACLOCAL=1

src_compile() {
	cd ${S}
	cygautoreconf
	lndirs
	cd ${B}
	cygconf \
		--enable-ipv6 \
		--disable-alsa \
		--disable-amidiplug-alsa \
		--disable-coreaudio \
		--disable-dockalbumart \
		--disable-evdevplug \
		--disable-mtp_up \
		--disable-pulse
	cygmake
}
